model Video {
  id           Int       @id @default(autoincrement())
  originalName String
  saveName     String
  extension    Extension
  size         Int
  path         String
  duration     Int
  thumbnail    String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  post    Post  @relation(fields: [postId], references: [id])
  postId  Int

  @@map("videos")
}
