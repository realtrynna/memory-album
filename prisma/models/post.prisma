model Post {
  id    Int    @id @default(autoincrement())
  title String
  content String
  location String
  isDeleted Boolean     @default(false)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id])
  userId  Int
  images Image[]
  videos Video[]
  albums Album[]

  @@map("posts")
}